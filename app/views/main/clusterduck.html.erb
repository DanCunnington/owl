<div id="clusterduck">
	<div class="container">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<div class="legend">
					<h3>More information about the Clusterduck (click one)</h3>
					<div class="link cost">Cost Effectiveness</div>
					<div class="link roadmap">Product Roadmap</div>
				</div>
				<div class="cost-effectiveness"><img src="/assets/clusterduck_cost_effectiveness.jpg" /></div>
				<div class="product-roadmap"><img src="/assets/clusterduck_roadmap.jpg" /></div>
			</div>
		</div>
	</div>
	<%= render 'layouts/footer' %>
</div>


<script type="text/javascript">
	
	$(".legend .link").on("click", function() {

		if ($(this).hasClass("cost")) {
			$(".product-roadmap").fadeOut("fast")
			setTimeout(function() {
				$(".cost-effectiveness").fadeIn("fast")
			}, 200)
		} else if ($(this).hasClass("roadmap")) {
			$(".cost-effectiveness").fadeOut("fast")
			setTimeout(function() {
				$(".product-roadmap").fadeIn("fast")
			}, 200)
		}
	})

</script>